---
/**
 * Footer component - Site footer with ecosystem branding
 * Includes copyright, links, and Buy Me a Coffee button
 */

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-container">
    <!-- Left section: Logo and description -->
    <div class="footer-brand">
      <a href="/" class="footer-logo">
        <svg class="footer-logo-icon" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg" width="24" height="24">
          <defs>
            <linearGradient id="footerCopperGrad" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" style="stop-color:#D4956A"/>
              <stop offset="100%" style="stop-color:#B87333"/>
            </linearGradient>
          </defs>
          <rect width="32" height="32" rx="6" fill="#0C0A09"/>
          <g stroke="#B87333" stroke-width="2" stroke-linecap="round">
            <line x1="16" y1="11" x2="10" y2="18"/>
            <line x1="16" y1="11" x2="22" y2="18"/>
            <line x1="11" y1="20" x2="21" y2="20"/>
          </g>
          <g>
            <circle cx="16" cy="8" r="3.5" fill="url(#footerCopperGrad)"/>
            <circle cx="8" cy="20" r="3" fill="url(#footerCopperGrad)"/>
            <circle cx="24" cy="20" r="3" fill="url(#footerCopperGrad)"/>
            <circle cx="16" cy="26" r="2.5" fill="#D4956A"/>
          </g>
          <circle cx="16" cy="16" r="1.5" fill="#FCD34D" opacity="0.8"/>
        </svg>
        <span class="footer-logo-text">Mnehmos <span class="footer-logo-accent">Ecosystem</span></span>
      </a>
      <p class="footer-description">
        Open-source prompt engineering research and tools for building better AI systems.
      </p>
    </div>

    <!-- Middle section: Quick links -->
    <nav class="footer-nav" aria-label="Footer navigation">
      <div class="footer-nav-group">
        <h3 class="footer-nav-title">Resources</h3>
        <ul class="footer-nav-list" role="list">
          <li><a href="/taxonomy">Technique Taxonomy</a></li>
          <li><a href="/relationships">Relationships Graph</a></li>
          <li><a href="/prompt-builder">Prompt Builder</a></li>
        </ul>
      </div>
      <div class="footer-nav-group">
        <h3 class="footer-nav-title">Ecosystem</h3>
        <ul class="footer-nav-list" role="list">
          <li><a href="https://github.com/mnehmos" target="_blank" rel="noopener noreferrer">GitHub</a></li>
          <li><a href="https://vario.dev" target="_blank" rel="noopener noreferrer">Vario.dev</a></li>
        </ul>
      </div>
    </nav>

    <!-- Right section: Support -->
    <div class="footer-support">
      <h3 class="footer-nav-title">Support the Project</h3>
      <a 
        href="https://www.buymeacoffee.com/mnehmos" 
        target="_blank" 
        rel="noopener noreferrer"
        class="bmc-button"
        aria-label="Buy me a coffee (opens in new tab)"
      >
