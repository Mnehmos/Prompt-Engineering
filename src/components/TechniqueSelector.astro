---
/**
 * TechniqueSelector Component
 * Two-column layout: Category sidebar + Technique card grid
 * Redesigned for better discoverability and space utilization
 */
import type { TechniqueWithCategory, CategorySummary } from '@/types/techniques';

interface Props {
  techniques: TechniqueWithCategory[];
  categories: CategorySummary[];
}

const { techniques, categories } = Astro.props;
const totalCount = techniques.length;
---

<div class="technique-selector-layout">
  <!-- Category Sidebar -->
  <aside class="category-sidebar">
    <h3 class="sidebar-title">Categories</h3>
    <div class="category-list" role="radiogroup" aria-label="Filter by category">
      <label class="category-radio">
        <input type="radio" name="category" value="" checked />
        <span class="radio-indicator"></span>
        <span class="category-label">All Techniques</span>
        <span class="category-count">{totalCount}</span>
      </label>
      {categories.map((cat) => (
        <label class="category-radio">
          <input type="radio" name="category" value={cat.id} />
          <span class="radio-indicator"></span>
          <span class="category-label">{cat.name}</span>
          <span class="category-count">{cat.techniqueCount}</span>
        </label>
      ))}
    </div>
  </aside>

  <!-- Technique Browser -->
  <section class="technique-browser">
    <div class="browser-header">
      <span class="technique-count" id="visible-count" data-testid="visible-count">
        <strong>{totalCount}</strong> techniques
      </span>
      <div class="search-wrapper">
        <span class="search-icon">üîç</span>
        <input 
          type="search"
          class="technique-search"
          data-testid="technique-search"
          placeholder="Search techniques..."
          autocomplete="off"
        />
        <button type="button" class="clear-search" aria-label="Clear search">√ó</button>
      </div>
    </div>

    <!-- Technique Card Grid -->
    <div class="technique-card-grid" data-testid="technique-list">
      {techniques.map((technique) => (
        <button
          type="button"
          class="technique-add-card"
          data-testid="technique-select-card"
          data-technique-id={technique.id}
          data-technique-name={technique.name}
          data-technique-description={technique.description}
          data-category-id={technique.categoryId}
        >
          <span class="technique-name">{technique.name}</span>
          <span class="technique-category">{technique.categoryName}</span>
          <span class="add-btn">+ ADD</span>
        </button>
      ))}
    </div>

    <!-- No Results Message -->
    <div class="no-results" style="display: none;">
      <span class="no-results-icon">üîç</span>
      <p>No techniques found matching your search.</p>
    </div>
  </section>
</div>

<style>
  .technique-selector-layout {
    display: grid;
    grid-template-columns: 220px 1fr;
    gap: var(--space-6);
    min-height: 400px;
  }

  /* Category Sidebar */
  .category-sidebar {
    background: var(--surface-overlay);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    height: fit-content;
    position: sticky;
    top: var(--space-4);
  }

  .sidebar-title {
    font-size: var(--font-sm);
    font-weight: var(--font-semibold);
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--border-default);
  }

  .category-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .category-radio {
    display: flex;
    align-items: center;
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-fast);
    gap: var(--space-2);
  }

  .category-radio:hover {
    background: var(--bg-muted);
  }

  .category-radio input {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .radio-indicator {
    width: 16px;
    height: 16px;
    border: 2px solid var(--border-default);
    border-radius: var(--radius-full);
    flex-shrink: 0;
    transition: all var(--transition-fast);
    position: relative;
  }

  .radio-indicator::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0);
    width: 8px;
    height: 8px;
    border-radius: var(--radius-full);
    background: var(--interactive-default);
    transition: transform var(--transition-fast);
  }

  .category-radio input:checked + .radio-indicator {
    border-color: var(--interactive-default);
  }

  .category-radio input:checked + .radio-indicator::after {
    transform: translate(-50%, -50%) scale(1);
  }

  .category-radio:has(input:checked) {
    background: color-mix(in srgb, var(--interactive-default) 10%, transparent);
  }

  .category-radio:has(input:checked) .category-label {
    font-weight: var(--font-medium);
    color: var(--text-primary);
  }

  .category-label {
    flex: 1;
    font-size: var(--font-sm);
    color: var(--text-secondary);
    transition: all var(--transition-fast);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .category-count {
    font-size: var(--font-xs);
    color: var(--text-tertiary);
    background: var(--surface-overlay);
    padding: 2px 6px;
    border-radius: var(--radius-sm);
    min-width: 24px;
    text-align: center;
  }

  .category-radio:has(input:checked) .category-count {
    background: var(--interactive-default);
    color: white;
  }

  /* Technique Browser */
  .technique-browser {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .browser-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .technique-count {
    font-size: var(--font-sm);
    color: var(--text-secondary);
  }

  .technique-count strong {
    color: var(--text-primary);
    font-weight: var(--font-semibold);
  }

  /* Search */
  .search-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    flex: 1;
    max-width: 300px;
  }

  .search-icon {
    position: absolute;
    left: var(--space-3);
    pointer-events: none;
    font-size: var(--font-sm);
  }

  .technique-search {
    width: 100%;
    padding: var(--space-2) var(--space-3);
    padding-left: var(--space-9);
    padding-right: var(--space-8);
    background: var(--surface-overlay);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: var(--font-sm);
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .technique-search:focus {
    outline: none;
    border-color: var(--interactive-default);
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--interactive-default) 25%, transparent);
  }

  .technique-search::placeholder {
    color: var(--text-tertiary);
  }

  .clear-search {
    position: absolute;
    right: var(--space-2);
    width: 24px;
    height: 24px;
    display: none;
    align-items: center;
    justify-content: center;
    background: var(--surface-hover);
    border: none;
    border-radius: var(--radius-full);
    color: var(--text-secondary);
    cursor: pointer;
    font-size: var(--font-lg);
    line-height: 1;
  }

  .clear-search:hover {
    background: var(--surface-overlay);
    color: var(--text-primary);
  }

  .search-wrapper:has(.technique-search:not(:placeholder-shown)) .clear-search {
    display: flex;
  }

  /* Technique Card Grid */
  .technique-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: var(--space-3);
    max-height: 500px;
    overflow-y: auto;
    padding-right: var(--space-1);
  }

  .technique-card-grid::-webkit-scrollbar {
    width: 6px;
  }

  .technique-card-grid::-webkit-scrollbar-track {
    background: transparent;
  }

  .technique-card-grid::-webkit-scrollbar-thumb {
    background: var(--border-default);
    border-radius: 3px;
  }

  .technique-card-grid::-webkit-scrollbar-thumb:hover {
    background: var(--text-tertiary);
  }

  /* Technique Add Card */
  .technique-add-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    padding: var(--space-3);
    background: var(--surface-card, var(--surface-overlay));
    border: 1px solid var(--border-default);
    border-radius: var(--radius-lg);
    text-align: left;
    cursor: pointer;
    transition: all var(--transition-fast);
    position: relative;
    min-height: 80px;
  }

  .technique-add-card:hover {
    border-color: var(--interactive-default);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .technique-add-card .technique-name {
    font-weight: var(--font-medium);
    color: var(--text-primary);
    font-size: var(--font-sm);
    line-height: 1.3;
    padding-right: var(--space-10);
  }

  .technique-add-card .technique-category {
    font-size: var(--font-xs);
    color: var(--interactive-default);
    opacity: 0.8;
  }

  .technique-add-card .add-btn {
    position: absolute;
    top: var(--space-2);
    right: var(--space-2);
    padding: var(--space-1) var(--space-2);
    background: var(--surface-overlay);
    color: var(--text-tertiary);
    border: none;
    border-radius: var(--radius-md);
    font-size: 10px;
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.3px;
    opacity: 0;
    transition: all var(--transition-fast);
    pointer-events: none;
  }

  .technique-add-card:hover .add-btn {
    opacity: 1;
    background: var(--interactive-default);
    color: white;
  }

  .technique-add-card.selected {
    border-color: var(--copper);
    background: color-mix(in srgb, var(--copper) 10%, transparent);
  }

  .technique-add-card.selected .add-btn {
    opacity: 1;
    background: var(--copper);
    color: white;
  }

  .technique-add-card.selected .add-btn::before {
    content: '‚úì ';
  }

  .technique-add-card.hidden {
    display: none;
  }

  /* No Results */
  .no-results {
    text-align: center;
    padding: var(--space-8) var(--space-4);
    color: var(--text-tertiary);
    grid-column: 1 / -1;
  }

  .no-results-icon {
    font-size: var(--font-3xl);
    display: block;
    margin-bottom: var(--space-2);
    opacity: 0.5;
  }

  .no-results p {
    font-size: var(--font-sm);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .technique-selector-layout {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .category-sidebar {
      position: static;
    }

    .category-list {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      gap: var(--space-2);
    }

    .category-radio {
      padding: var(--space-2) var(--space-3);
      border: 1px solid var(--border-default);
      border-radius: var(--radius-full);
      background: var(--surface-overlay);
    }

    .category-radio:has(input:checked) {
      border-color: var(--interactive-default);
      background: color-mix(in srgb, var(--interactive-default) 15%, transparent);
    }

    .radio-indicator {
      width: 12px;
      height: 12px;
    }

    .radio-indicator::after {
      width: 6px;
      height: 6px;
    }

    .category-label {
      font-size: var(--font-xs);
    }

    .category-count {
      font-size: 10px;
      padding: 1px 4px;
    }
  }

  @media (max-width: 600px) {
    .browser-header {
      flex-direction: column;
      align-items: stretch;
    }

    .search-wrapper {
      max-width: none;
    }

    .technique-card-grid {
      grid-template-columns: 1fr;
      max-height: 400px;
    }
  }
</style>
