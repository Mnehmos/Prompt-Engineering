---
/**
 * TechniqueSelector Component
 * Provides searchable technique selection for the prompt builder
 */
import type { TechniqueWithCategory, CategorySummary } from '@/types/techniques';

interface Props {
  techniques: TechniqueWithCategory[];
  categories: CategorySummary[];
}

const { techniques, categories } = Astro.props;
---

<div class="technique-selector">
  <!-- Search Input -->
  <div class="search-wrapper">
    <span class="search-icon">üîç</span>
    <input 
      type="text"
      class="technique-search"
      data-testid="technique-search"
      placeholder="Search techniques..."
      autocomplete="off"
    />
    <button type="button" class="clear-search" aria-label="Clear search">√ó</button>
  </div>

  <!-- Category Filter -->
  <div class="category-filter">
    <button type="button" class="category-btn active" data-category="all">
      All ({techniques.length})
    </button>
    {categories.map((cat) => (
      <button type="button" class="category-btn" data-category={cat.id}>
        {cat.name} ({cat.techniqueCount})
      </button>
    ))}
  </div>

  <!-- Technique List -->
  <div class="technique-list" data-testid="technique-list">
    {techniques.map((technique) => (
      <button
        type="button"
        class="technique-select-card"
        data-testid="technique-select-card"
        data-technique-id={technique.id}
        data-technique-name={technique.name}
        data-technique-description={technique.description}
        data-category-id={technique.categoryId}
      >
        <span class="technique-name">{technique.name}</span>
        <span class="technique-category">{technique.categoryName}</span>
        <span class="technique-description">{technique.description.slice(0, 100)}...</span>
        <span class="add-indicator">+ Add</span>
      </button>
    ))}
  </div>

  <!-- No Results Message -->
  <div class="no-results" style="display: none;">
    <span class="no-results-icon">üîç</span>
    <p>No techniques found matching your search.</p>
  </div>
</div>

<style>
  .technique-selector {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  /* Search */
  .search-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-icon {
    position: absolute;
    left: var(--space-3);
    pointer-events: none;
    font-size: var(--font-sm);
  }

  .technique-search {
    width: 100%;
    padding: var(--space-2) var(--space-3);
    padding-left: var(--space-9);
    padding-right: var(--space-8);
    background: var(--surface-overlay);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-md);
    color: var(--text-primary);
    font-size: var(--font-sm);
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .technique-search:focus {
    outline: none;
    border-color: var(--interactive-default);
    box-shadow: 0 0 0 3px color-mix(in srgb, var(--interactive-default) 25%, transparent);
  }

  .technique-search::placeholder {
    color: var(--text-tertiary);
  }

  .clear-search {
    position: absolute;
    right: var(--space-2);
    width: 24px;
    height: 24px;
    display: none;
    align-items: center;
    justify-content: center;
    background: var(--surface-hover);
    border: none;
    border-radius: var(--radius-full);
    color: var(--text-secondary);
    cursor: pointer;
    font-size: var(--font-lg);
    line-height: 1;
  }

  .clear-search:hover {
    background: var(--surface-overlay);
    color: var(--text-primary);
  }

  .search-wrapper:has(.technique-search:not(:placeholder-shown)) .clear-search {
    display: flex;
  }

  /* Category Filter */
  .category-filter {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-1);
  }

  .category-btn {
    padding: var(--space-1) var(--space-2);
    background: transparent;
    border: 1px solid var(--border-default);
    border-radius: var(--radius-full);
    color: var(--text-secondary);
    font-size: var(--font-xs);
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
  }

  .category-btn:hover {
    border-color: var(--interactive-default);
    color: var(--interactive-default);
  }

  .category-btn.active {
    background: var(--interactive-default);
    border-color: var(--interactive-default);
    color: white;
  }

  /* Technique List */
  .technique-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    max-height: 400px;
    overflow-y: auto;
    padding-right: var(--space-1);
  }

  .technique-list::-webkit-scrollbar {
    width: 6px;
  }

  .technique-list::-webkit-scrollbar-track {
    background: transparent;
  }

  .technique-list::-webkit-scrollbar-thumb {
    background: var(--border-default);
    border-radius: 3px;
  }

  .technique-list::-webkit-scrollbar-thumb:hover {
    background: var(--text-tertiary);
  }

  /* Technique Card */
  .technique-select-card {
    display: grid;
    gap: var(--space-1);
    padding: var(--space-3);
    background: var(--surface-overlay);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-md);
    text-align: left;
    cursor: pointer;
    transition: all 0.2s;
    position: relative;
    overflow: hidden;
  }

  .technique-select-card:hover {
    border-color: var(--interactive-default);
    background: var(--surface-hover);
    transform: translateX(4px);
  }

  .technique-select-card.selected,
  .technique-select-card.active {
    background: color-mix(in srgb, var(--interactive-default) 10%, transparent);
    border-color: var(--interactive-default);
  }

  .technique-select-card.selected .add-indicator,
  .technique-select-card.active .add-indicator {
    background: var(--interactive-default);
    color: white;
  }

  .technique-select-card.selected .add-indicator::before,
  .technique-select-card.active .add-indicator::before {
    content: '‚úì ';
  }

  .technique-select-card.hidden {
    display: none;
  }

  .technique-name {
    font-weight: var(--font-medium);
    color: var(--text-primary);
    font-size: var(--font-sm);
  }

  .technique-category {
    font-size: var(--font-xs);
    color: var(--interactive-default);
    opacity: 0.8;
  }

  .technique-description {
    font-size: var(--font-xs);
    color: var(--text-tertiary);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .add-indicator {
    position: absolute;
    top: var(--space-2);
    right: var(--space-2);
    padding: 2px 6px;
    background: var(--surface-overlay);
    border-radius: var(--radius-sm);
    font-size: 10px;
    font-weight: var(--font-medium);
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.2s;
  }

  .technique-select-card:hover .add-indicator {
    background: var(--interactive-default);
    color: white;
  }

  /* No Results */
  .no-results {
    text-align: center;
    padding: var(--space-8) var(--space-4);
    color: var(--text-tertiary);
  }

  .no-results-icon {
    font-size: var(--font-3xl);
    display: block;
    margin-bottom: var(--space-2);
    opacity: 0.5;
  }

  .no-results p {
    font-size: var(--font-sm);
  }
</style>
