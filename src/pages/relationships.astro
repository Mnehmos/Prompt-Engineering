---
/**
 * Relationships Page
 * 
 * Interactive D3.js force-directed graph showing technique relationships
 * Includes category filtering, zoom controls, tooltips, and legend
 */
import Layout from '@/layouts/Layout.astro';
import RelationshipGraph from '@/components/RelationshipGraph.astro';
import { getCollection } from 'astro:content';
import { buildGraphData, getCategoryColors, getGraphStats } from '@/lib/graph';
import { getCategories } from '@/lib/techniques';
import type { TechniquesData } from '@/types/techniques';

// Load techniques data from content collection
const techniquesCollection = await getCollection('techniques');
const data = techniquesCollection[0].data as TechniquesData;

// Build graph data and stats
const graphData = buildGraphData(data);
const categoryColors = getCategoryColors(data);
const stats = getGraphStats(graphData);
const categories = getCategories(data);

// Prepare serializable data for client
const graphDataJson = JSON.stringify(graphData);
const categoryColorsJson = JSON.stringify(categoryColors);
---

<Layout title="Technique Relationships | Mnehmos Prompt Research">
  <div class="relationships-page">
    <header class="page-header">
      <div class="container">
        <h1 class="page-title">
          <span class="text-gradient">Technique Relationships</span>
        </h1>
        <p class="page-subtitle">
          {stats.totalNodes} techniques â€¢ {stats.totalLinks} connections
        </p>
      </div>
    </header>

    <div class="graph-layout container">
      <!-- Sidebar -->
      <aside class="graph-sidebar glass-card">
        <!-- Category Filter -->
        <section class="sidebar-section">
          <h3 class="sidebar-title">Filter by Category</h3>
          <div class="filter-select-wrapper">
            <label for="graph-category-filter" class="sr-only">Select category</label>
            <select 
              id="graph-category-filter" 
              data-testid="graph-category-filter" 
              class="category-select"
            >
              <option value="">All Categories</option>
              {categories.map(cat => (
                <option value={cat.id}>{cat.name}</option>
              ))}
            </select>
            <svg class="select-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M6 9l6 6 6-6" />
            </svg>
          </div>
        </section>

        <!-- Legend -->
        <section class="sidebar-section">
          <h3 class="sidebar-title">Legend</h3>
          <div data-testid="graph-legend" class="graph-legend">
            {categories.map(cat => (
              <button 
                class="legend-item"
                data-category={cat.id}
                title={`Filter to ${cat.name}`}
              >
                <span 
                  class="color-dot" 
                  style={`background: ${categoryColors[cat.id]}`}
                ></span>
                <span class="legend-name">{cat.name}</span>
              </button>
            ))}
          </div>
        </section>

        <!-- Statistics -->
        <section class="sidebar-section">
          <h3 class="sidebar-title">Statistics</h3>
          <div data-testid="graph-stats" class="graph-stats">
            <div class="stat-row">
              <span class="stat-label">Total Nodes</span>
              <span class="stat-value">{stats.totalNodes}</span>
            </div>
            <div class="stat-row">
              <span class="stat-label">Total Links</span>
              <span class="stat-value">{stats.totalLinks}</span>
            </div>
            <div class="stat-row">
              <span class="stat-label">Avg. Connections</span>
              <span class="stat-value">{stats.avgConnections.toFixed(1)}</span>
            </div>
            {stats.mostConnected && (
              <div class="stat-row highlight">
                <span class="stat-label">Most Connected</span>
                <span class="stat-value" title={stats.mostConnected.name}>
                  {stats.mostConnected.name.length > 20 
                    ? stats.mostConnected.name.slice(0, 20) + '...'
                    : stats.mostConnected.name
                  }
                  <small>({stats.mostConnected.connections})</small>
                </span>
              </div>
            )}
            <div class="stat-row">
              <span class="stat-label">Isolated Nodes</span>
              <span class="stat-value">{stats.isolatedNodes}</span>
            </div>
          </div>
        </section>

        <!-- Selected Node Info -->
        <section class="sidebar-section" id="selected-node-section" hidden>
          <h3 class="sidebar-title">Selected Technique</h3>
          <div class="selected-node-info">
            <h4 id="selected-node-name" class="selected-name"></h4>
            <p id="selected-node-category" class="selected-category"></p>
            <p id="selected-node-connections" class="selected-connections"></p>
            <button id="center-on-node" class="btn btn-secondary btn-sm">
              Center on Node
            </button>
          </div>
        </section>
      </aside>

      <!-- Graph Container -->
      <div class="graph-main">
        <RelationshipGraph />
      </div>
    </div>

    <!-- Help Tip -->
    <div class="help-tip container">
      <p>
        <strong>Tip:</strong> Drag nodes to rearrange. Scroll to zoom. Click nodes to select and see details. 
        Use the sidebar filter to focus on specific categories.
      </p>
    </div>
  </div>
</Layout>

<!-- Pass data to client-side script -->
<script define:vars={{ graphDataJson, categoryColorsJson }}>
  window.__GRAPH_DATA__ = JSON.parse(graphDataJson);
  window.__CATEGORY_COLORS__ = JSON.parse(categoryColorsJson);
</script>

<script>
  import { initializeGraph, setCategoryColors, type GraphController } from '@/scripts/d3-graph';
  import type { GraphData } from '@/types/graph';

  // Wait for DOM and data
  document.addEventListener('DOMContentLoaded', () => {
    const graphData = (window as any).__GRAPH_DATA__ as GraphData;
    const categoryColors = (window as any).__CATEGORY_COLORS__ as Record<string, string>;

    if (!graphData || !categoryColors) {
      console.error('Graph data not loaded');
      return;
    }

    // Set category colors
    setCategoryColors(categoryColors);

    // Initialize graph
    const container = document.querySelector('[data-testid="graph-container"]') as HTMLElement;
    if (!container) {
      console.error('Graph container not found');
      return;
    }

    let graphController: GraphController;

    try {
      graphController = initializeGraph(container, graphData, categoryColors);
    } catch (err) {
      console.error('Failed to initialize graph:', err);
      return;
    }

    // Zoom controls
    const zoomIn = document.querySelector('[data-testid="zoom-in"]');
    const zoomOut = document.querySelector('[data-testid="zoom-out"]');
    const zoomReset = document.querySelector('[data-testid="zoom-reset"]');

    zoomIn?.addEventListener('click', () => graphController.zoomIn());
    zoomOut?.addEventListener('click', () => graphController.zoomOut());
    zoomReset?.addEventListener('click', () => graphController.zoomReset());

    // Category filter
    const categoryFilter = document.querySelector('[data-testid="graph-category-filter"]') as HTMLSelectElement;
    categoryFilter?.addEventListener('change', (e) => {
      const value = (e.target as HTMLSelectElement).value;
      graphController.filterByCategory(value || null);
    });

    // Legend items as filter buttons
    const legendItems = document.querySelectorAll('.legend-item');
    legendItems.forEach(item => {
      item.addEventListener('click', () => {
        const categoryId = (item as HTMLElement).dataset.category || '';
        
        // Update select
        if (categoryFilter) {
          categoryFilter.value = categoryId;
        }
        
        graphController.filterByCategory(categoryId || null);
        
        // Highlight active legend item
        legendItems.forEach(li => li.classList.remove('active'));
        if (categoryId) {
          item.classList.add('active');
        }
      });
    });

    // Tooltip handling
    const tooltip = document.querySelector('[data-testid="graph-tooltip"]');
    const tooltipName = document.querySelector('[data-testid="tooltip-name"]');
    const tooltipCategory = document.querySelector('[data-testid="tooltip-category"]');
    const tooltipConnections = document.querySelector('[data-testid="tooltip-connections"]');

    graphController.setOnNodeHover((node) => {
      if (node && tooltip && tooltipName && tooltipCategory && tooltipConnections) {
        tooltipName.textContent = node.name;
        tooltipCategory.textContent = node.categoryName;
        tooltipConnections.textContent = `${node.connectionCount} connection${node.connectionCount !== 1 ? 's' : ''}`;
        tooltip.classList.remove('hidden');
      } else if (tooltip) {
        tooltip.classList.add('hidden');
      }
    });

    // Selected node handling
    const selectedSection = document.getElementById('selected-node-section');
    const selectedName = document.getElementById('selected-node-name');
    const selectedCategory = document.getElementById('selected-node-category');
    const selectedConnections = document.getElementById('selected-node-connections');
    const centerOnNodeBtn = document.getElementById('center-on-node');
    let currentSelectedId: string | null = null;

    graphController.setOnNodeSelect((nodeId) => {
      currentSelectedId = nodeId;
      const node = graphController.getSelectedNode();
      
      if (node && selectedSection && selectedName && selectedCategory && selectedConnections) {
        selectedName.textContent = node.name;
        selectedCategory.textContent = node.categoryName;
        selectedConnections.textContent = `${node.connectionCount} connection${node.connectionCount !== 1 ? 's' : ''}`;
        selectedSection.hidden = false;
      } else if (selectedSection) {
        selectedSection.hidden = true;
      }
    });

    centerOnNodeBtn?.addEventListener('click', () => {
      if (currentSelectedId) {
        graphController.centerOnNode(currentSelectedId);
      }
    });

    // Handle window resize
    let resizeTimeout: number;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = window.setTimeout(() => {
        graphController.resize();
      }, 250);
    });
  });
</script>

<style>
  .relationships-page {
    flex: 1;
    display: flex;
    flex-direction: column;
    padding-bottom: var(--space-8);
  }

  /* Page Header */
  .page-header {
    background: var(--bg-muted);
    padding: var(--space-10) 0 var(--space-6);
    border-bottom: 1px solid var(--border-default);
    text-align: center;
  }

  .page-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    margin: 0 0 var(--space-2);
  }

  .page-subtitle {
    font-size: var(--text-lg);
    color: var(--text-muted);
    margin: 0;
  }

  /* Graph Layout */
  .graph-layout {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: var(--space-6);
    padding-top: var(--space-6);
    flex: 1;
  }

  /* Sidebar */
  .graph-sidebar {
    padding: var(--space-5);
    height: fit-content;
    position: sticky;
    top: calc(72px + var(--space-6));
    max-height: calc(100vh - 72px - var(--space-12));
    overflow-y: auto;
  }

  .sidebar-section {
    padding-bottom: var(--space-5);
    margin-bottom: var(--space-5);
    border-bottom: 1px solid var(--border-muted);
  }

  .sidebar-section:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .sidebar-title {
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-muted);
    margin: 0 0 var(--space-3);
  }

  /* Category Select */
  .filter-select-wrapper {
    position: relative;
  }

  .category-select {
    width: 100%;
    appearance: none;
    padding-right: var(--space-10);
    font-size: var(--text-sm);
  }

  .select-icon {
    position: absolute;
    right: var(--space-3);
    top: 50%;
    transform: translateY(-50%);
    width: 18px;
    height: 18px;
    color: var(--text-muted);
    pointer-events: none;
  }

  /* Legend */
  .graph-legend {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    max-height: 200px;
    overflow-y: auto;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2);
    background: transparent;
    border: 1px solid transparent;
    border-radius: var(--radius-md);
    cursor: pointer;
    text-align: left;
    font-size: var(--text-sm);
    color: var(--text-main);
    transition: all var(--transition-fast);
  }

  .legend-item:hover {
    background: var(--bg-muted);
  }

  .legend-item.active {
    background: var(--bg-accent);
    border-color: var(--copper);
  }

  .color-dot {
    width: 12px;
    height: 12px;
    border-radius: var(--radius-full);
    flex-shrink: 0;
  }

  .legend-name {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Stats */
  .graph-stats {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .stat-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-2) 0;
    font-size: var(--text-sm);
  }

  .stat-row.highlight {
    background: var(--bg-accent);
    margin: 0 calc(-1 * var(--space-2));
    padding: var(--space-2);
    border-radius: var(--radius-md);
  }

  .stat-label {
    color: var(--text-muted);
  }

  .stat-value {
    color: var(--text-main);
    font-weight: var(--font-medium);
  }

  .stat-value small {
    color: var(--copper);
    margin-left: var(--space-1);
  }

  /* Selected Node */
  .selected-node-info {
    padding-top: var(--space-2);
  }

  .selected-name {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    color: var(--text-main);
    margin: 0 0 var(--space-1);
  }

  .selected-category {
    font-size: var(--text-sm);
    color: var(--copper);
    margin: 0 0 var(--space-2);
  }

  .selected-connections {
    font-size: var(--text-sm);
    color: var(--text-muted);
    margin: 0 0 var(--space-3);
  }

  .btn-sm {
    padding: var(--space-2) var(--space-3);
    font-size: var(--text-xs);
  }

  /* Graph Main */
  .graph-main {
    min-height: 600px;
    height: calc(100vh - 280px);
  }

  /* Help Tip */
  .help-tip {
    margin-top: var(--space-4);
    text-align: center;
  }

  .help-tip p {
    font-size: var(--text-sm);
    color: var(--text-muted);
    margin: 0;
  }

  .help-tip strong {
    color: var(--copper);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .graph-layout {
      grid-template-columns: 1fr;
    }

    .graph-sidebar {
      position: static;
      max-height: none;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--space-4);
    }

    .sidebar-section {
      border-bottom: none;
      margin-bottom: 0;
      padding-bottom: 0;
    }

    .graph-legend {
      max-height: 150px;
    }

    .graph-main {
      min-height: 500px;
      height: 60vh;
    }
  }

  @media (max-width: 768px) {
    .page-header {
      padding: var(--space-8) 0 var(--space-4);
    }

    .page-title {
      font-size: var(--text-3xl);
    }

    .graph-sidebar {
      grid-template-columns: 1fr;
      gap: var(--space-3);
      padding: var(--space-4);
    }

    .sidebar-section:first-child {
      order: -1;
    }

    .graph-legend {
      flex-direction: row;
      flex-wrap: wrap;
      max-height: none;
    }

    .legend-item {
      padding: var(--space-1) var(--space-2);
    }

    .graph-main {
      min-height: 400px;
      height: 50vh;
    }

    .help-tip {
      padding: 0 var(--space-4);
    }
  }
</style>
