---
/**
 * Search Page - RAG Chat Interface
 * Allows users to ask questions about prompt engineering techniques
 * Supports demo mode (no backend) and API mode (with backend endpoint)
 */
import Layout from '@/layouts/Layout.astro';
---

<Layout 
  title="AI Research Assistant - Mnehmos Prompt Research" 
  description="Ask our AI assistant about 192 prompt engineering techniques"
>
  <div class="search-page">
    <header class="page-header">
      <h1 class="page-title">
        <span class="text-gradient">Chat</span> with Our AI
      </h1>
      <p class="page-subtitle">
        Ask questions about prompt engineering techniques
      </p>
    </header>
    
    <div class="chat-container glass-card">
      <!-- Chat messages area -->
      <div data-testid="chat-messages" class="messages" role="log" aria-live="polite" aria-label="Chat messages">
        <!-- Welcome message -->
        <div class="message assistant">
          <div class="message-avatar">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <path d="M8 14s1.5 2 4 2 4-2 4-2"/>
              <line x1="9" y1="9" x2="9.01" y2="9"/>
              <line x1="15" y1="9" x2="15.01" y2="9"/>
            </svg>
          </div>
          <div class="message-content">
            <p>ðŸ‘‹ Ask me anything about prompt engineering techniques! Try:</p>
            <ul class="suggestion-list">
              <li>
                <button type="button" class="suggestion-btn" data-suggestion="What is chain of thought prompting?">
                  "What is chain of thought prompting?"
                </button>
              </li>
              <li>
                <button type="button" class="suggestion-btn" data-suggestion="How do I use few-shot learning?">
                  "How do I use few-shot learning?"
                </button>
              </li>
              <li>
                <button type="button" class="suggestion-btn" data-suggestion="What techniques work best for code generation?">
                  "What techniques work best for code generation?"
                </button>
              </li>
            </ul>
          </div>
        </div>
      </div>
      
      <!-- Chat input form -->
      <form data-testid="chat-form" class="chat-form">
        <div class="input-wrapper">
          <input 
            type="text" 
            data-testid="chat-input"
            class="chat-input"
            placeholder="Ask about prompt engineering techniques..."
            autocomplete="off"
            aria-label="Your question"
          />
          <button type="submit" data-testid="chat-submit" class="submit-btn btn-primary" aria-label="Send message">
            <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="22" y1="2" x2="11" y2="13"/>
              <polygon points="22 2 15 22 11 13 2 9 22 2"/>
            </svg>
            <span class="btn-text">Send</span>
          </button>
        </div>
        <p class="input-hint" id="status-hint">
          Powered by RAG â€¢ Responses stream in real-time
        </p>
      </form>
    </div>
  </div>
  
  <!-- Chat configuration (can be overridden by backend) -->
  <script id="chat-config" type="application/json">
    {
      "demoMode": false,
      "apiEndpoint": "https://rag-server-production-376d.up.railway.app/chat"
    }
  </script>
</Layout>

<script>
  import '../scripts/chat';
</script>

<style>
  .search-page {
    max-width: 900px;
    margin: 0 auto;
    padding: var(--space-8) var(--space-6);
    min-height: calc(100vh - 200px);
    display: flex;
    flex-direction: column;
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .page-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-3);
    color: var(--text-main);
  }

  .page-subtitle {
    font-size: var(--text-lg);
    color: var(--text-muted);
    max-width: 500px;
    margin: 0 auto;
  }

  /* Chat container */
  .chat-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-height: 500px;
    max-height: 70vh;
    overflow: hidden;
  }

  /* Messages area */
  .messages {
    flex: 1;
    overflow-y: auto;
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    scroll-behavior: smooth;
  }

  /* Individual message */
  .message {
    display: flex;
    gap: var(--space-3);
    max-width: 90%;
    animation: message-in 0.3s ease-out;
  }

  @keyframes message-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .message.user {
    align-self: flex-end;
    flex-direction: row-reverse;
  }

  .message.assistant {
    align-self: flex-start;
  }

  .message-avatar {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .message.assistant .message-avatar {
    background: var(--bg-accent);
    color: var(--copper);
  }

  .message.user .message-avatar {
    background: linear-gradient(135deg, var(--copper) 0%, var(--copper-dark) 100%);
    color: white;
  }

  .message-content {
    padding: var(--space-4);
    border-radius: var(--radius-xl);
    line-height: var(--leading-relaxed);
  }

  .message.assistant .message-content {
    background: var(--bg-muted);
    border: 1px solid var(--border-muted);
    color: var(--text-main);
  }

  .message.user .message-content {
    background: linear-gradient(135deg, var(--copper) 0%, var(--copper-dark) 100%);
    color: white;
    border: none;
  }

  .message-content p {
    color: inherit;
    margin: 0;
  }

  .message-content p + p {
    margin-top: var(--space-3);
  }

  /* Suggestion list */
  .suggestion-list {
    list-style: none;
    margin: var(--space-3) 0 0 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .suggestion-btn {
    display: block;
    width: 100%;
    text-align: left;
    padding: var(--space-2) var(--space-3);
    background: var(--bg-card);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-lg);
    font-size: var(--text-sm);
    color: var(--text-accent);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .suggestion-btn:hover {
    background: var(--bg-accent);
    border-color: var(--copper);
    color: var(--copper);
  }

  /* Sources section */
  .sources {
    margin-top: var(--space-3);
    border-top: 1px solid var(--border-muted);
    padding-top: var(--space-3);
  }

  .sources summary {
    cursor: pointer;
    font-size: var(--text-sm);
    color: var(--text-muted);
    font-weight: var(--font-medium);
  }

  .sources summary:hover {
    color: var(--copper);
  }

  .sources ul {
    list-style: none;
    margin: var(--space-2) 0 0 0;
    padding: 0;
  }

  .sources li {
    display: flex;
    gap: var(--space-2);
    padding: var(--space-2) 0;
    border-bottom: 1px solid var(--border-muted);
    font-size: var(--text-sm);
  }

  .sources li:last-child {
    border-bottom: none;
  }

  .sources .score {
    flex-shrink: 0;
    background: var(--bg-accent);
    color: var(--copper);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
  }

  .sources .text {
    color: var(--text-muted);
    line-height: var(--leading-snug);
  }

  .sources .source-link {
    color: var(--text-accent);
    text-decoration: none;
    line-height: var(--leading-snug);
    transition: color var(--transition-fast);
  }

  .sources .source-link:hover {
    color: var(--copper);
    text-decoration: underline;
  }

  /* Typing indicator */
  .message.typing .message-content {
    display: flex;
    gap: 4px;
    padding: var(--space-4) var(--space-5);
  }

  .message.typing span {
    width: 8px;
    height: 8px;
    border-radius: var(--radius-full);
    background: var(--copper);
    animation: typing-bounce 1.4s infinite ease-in-out both;
  }

  .message.typing span:nth-child(1) { animation-delay: -0.32s; }
  .message.typing span:nth-child(2) { animation-delay: -0.16s; }
  .message.typing span:nth-child(3) { animation-delay: 0s; }

  @keyframes typing-bounce {
    0%, 80%, 100% {
      transform: scale(0.8);
      opacity: 0.5;
    }
    40% {
      transform: scale(1);
      opacity: 1;
    }
  }

  /* Chat form */
  .chat-form {
    padding: var(--space-4) var(--space-6);
    border-top: 1px solid var(--border-muted);
    background: var(--bg-muted);
    border-radius: 0 0 var(--radius-xl) var(--radius-xl);
  }

  .input-wrapper {
    display: flex;
    gap: var(--space-3);
  }

  .chat-input {
    flex: 1;
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-lg);
    background: var(--bg-card);
    color: var(--text-main);
    font-size: var(--text-base);
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
  }

  .chat-input:focus {
    outline: none;
    border-color: var(--copper);
    box-shadow: 0 0 0 3px var(--bg-accent);
  }

  .chat-input::placeholder {
    color: var(--text-muted);
  }

  .submit-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-5);
    background: linear-gradient(135deg, var(--copper) 0%, var(--copper-dark) 100%);
    color: white;
    border: none;
    border-radius: var(--radius-lg);
    font-weight: var(--font-semibold);
    font-size: var(--text-sm);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .submit-btn:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-lg), var(--shadow-glow);
  }

  .submit-btn:focus-visible {
    outline: 2px solid var(--interactive-focus);
    outline-offset: 2px;
  }

  .submit-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }

  .input-hint {
    margin-top: var(--space-2);
    font-size: var(--text-xs);
    color: var(--text-muted);
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
  }

  .demo-badge {
    display: inline-flex;
    padding: var(--space-1) var(--space-2);
    background: var(--bg-accent);
    color: var(--copper);
    border-radius: var(--radius-sm);
    font-weight: var(--font-semibold);
    font-size: var(--text-xs);
  }

  /* Markdown rendering in messages */
  .message-content :global(strong) {
    font-weight: var(--font-bold);
  }

  .message-content :global(code) {
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    background: rgba(0, 0, 0, 0.1);
    font-family: var(--font-mono);
    font-size: 0.9em;
  }

  .message.user .message-content :global(code) {
    background: rgba(255, 255, 255, 0.2);
  }

  .message-content :global(pre) {
    margin: var(--space-3) 0;
    padding: var(--space-3);
    border-radius: var(--radius-md);
    background: rgba(0, 0, 0, 0.1);
    overflow-x: auto;
  }

  .message.user .message-content :global(pre) {
    background: rgba(255, 255, 255, 0.1);
  }

  .message-content :global(pre code) {
    padding: 0;
    background: transparent;
  }

  .message-content :global(ul),
  .message-content :global(ol) {
    margin: var(--space-2) 0;
    padding-left: var(--space-5);
  }

  .message-content :global(li) {
    margin-bottom: var(--space-1);
  }

  /* Responsive */
  @media (max-width: 767px) {
    .search-page {
      padding: var(--space-4) var(--space-4);
    }

    .page-title {
      font-size: var(--text-3xl);
    }

    .page-subtitle {
      font-size: var(--text-base);
    }

    .chat-container {
      min-height: 400px;
      max-height: 60vh;
    }

    .messages {
      padding: var(--space-4);
    }

    .message {
      max-width: 95%;
    }

    .chat-form {
      padding: var(--space-3) var(--space-4);
    }

    .submit-btn .btn-text {
      display: none;
    }

    .submit-btn {
      padding: var(--space-3);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .message {
      animation: none;
    }

    .message.typing span {
      animation: none;
      opacity: 0.7;
    }

    .messages {
      scroll-behavior: auto;
    }
  }
</style>
