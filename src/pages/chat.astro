---
/**
 * Search Page - RAG Chat Interface
 * Allows users to ask questions about prompt engineering techniques
 * Supports demo mode (no backend) and API mode (with backend endpoint)
 */
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
import { getAllTechniques, getCategories } from "@/lib/techniques";
import type { TechniquesData } from "@/types/techniques";

// Load taxonomy data for sidebar
const techniquesCollection = await getCollection("techniques");
const data = techniquesCollection[0].data as TechniquesData;
const categories = getCategories(data);
const allTechniques = getAllTechniques(data);
const techniqueNames = allTechniques.map((t) => t.name);
---

<Layout
  title="AI Research Assistant - Mnehmos Prompt Research"
  description="Ask our AI assistant about 192 prompt engineering techniques"
>
  <div class="chat-layout">
    <!-- Sidebar -->
    <aside class="chat-sidebar glass-card">
      <div class="sidebar-header">
        <h2>Taxonomy</h2>
        <button
          id="random-technique-btn"
          class="random-btn"
          title="Get a random technique idea"
        >
          ðŸŽ² Random
        </button>
      </div>

      <div class="categories-list">
        {
          categories.map((cat) => (
            <div class="category-item">
              <button
                class="category-btn"
                data-suggestion={`Tell me about ${cat.name} techniques`}
              >
                {cat.name}
              </button>
              <span class="count">{cat.techniqueCount}</span>
            </div>
          ))
        }
      </div>
    </aside>

    <!-- Main Chat Area -->
    <div class="chat-main">
      <header class="page-header">
        <h1 class="page-title">
          <span class="text-gradient">Chat</span> with Our AI
        </h1>
        <p class="page-subtitle">
          Ask questions about prompt engineering techniques
        </p>
      </header>

      <div class="chat-container glass-card">
        <!-- Chat messages area -->
        <div
          data-testid="chat-messages"
          class="messages"
          role="log"
          aria-live="polite"
          aria-label="Chat messages"
        >
          <!-- Welcome message -->
          <div class="message assistant">
            <div class="message-avatar">
              <svg
                viewBox="0 0 24 24"
                width="20"
                height="20"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M8 14s1.5 2 4 2 4-2 4-2"></path>
                <line x1="9" y1="9" x2="9.01" y2="9"></line>
                <line x1="15" y1="9" x2="15.01" y2="9"></line>
              </svg>
            </div>
            <div class="message-content">
              <p>
                ðŸ‘‹ Ask me anything about prompt engineering techniques! Try:
              </p>
              <ul class="suggestion-list">
                <li>
                  <button
                    type="button"
                    class="suggestion-btn"
                    data-suggestion="What is chain of thought prompting?"
                  >
                    "What is chain of thought prompting?"
                  </button>
                </li>
                <li>
                  <button
                    type="button"
                    class="suggestion-btn"
                    data-suggestion="How do I use few-shot learning?"
                  >
                    "How do I use few-shot learning?"
                  </button>
                </li>
                <li>
                  <button
                    type="button"
                    class="suggestion-btn"
                    data-suggestion="What techniques work best for code generation?"
                  >
                    "What techniques work best for code generation?"
                  </button>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Chat input form -->
        <form data-testid="chat-form" class="chat-form">
          <div class="input-wrapper">
            <input
              type="text"
              data-testid="chat-input"
              class="chat-input"
              placeholder="Ask about prompt engineering techniques..."
              autocomplete="off"
              aria-label="Your question"
            />
            <button
              type="submit"
              data-testid="chat-submit"
              class="submit-btn btn-primary"
              aria-label="Send message"
            >
              <svg
                viewBox="0 0 24 24"
                width="20"
                height="20"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <line x1="22" y1="2" x2="11" y2="13"></line>
                <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
              </svg>
              <span class="btn-text">Send</span>
            </button>
          </div>
          <p class="input-hint" id="status-hint">
            Powered by RAG â€¢ Responses stream in real-time
          </p>
        </form>
      </div>
    </div>
  </div>

  <!-- Chat configuration (can be overridden by backend) -->
  <script id="chat-config" type="application/json" is:inline>
    {
      "demoMode": false,
      "apiEndpoint": "https://rag-server-production-376d.up.railway.app/chat"
    }
  </script>
</Layout>

<script>
  import "../scripts/chat";
</script>

<script is:inline define:vars={{ techniqueNames }}>
  const randomBtn = document.getElementById("random-technique-btn");
  const chatInput = document.querySelector(".chat-input");

  if (randomBtn && chatInput) {
    randomBtn.addEventListener("click", () => {
      const random =
        techniqueNames[Math.floor(Math.random() * techniqueNames.length)];
      chatInput.value = `Tell me about "${random}"`;

      // Auto-submit
      const form = document.querySelector(".chat-form");
      if (form instanceof HTMLFormElement) {
        form.requestSubmit();
      }
    });
  }
</script>

<style>
  /* Chat Page Layout */
  .chat-layout {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: var(--space-6);
    width: 100%;
    padding: var(--space-4);
    height: calc(100vh - 80px); /* Fill remaining height */
    overflow: hidden; /* Prevent body scroll */
  }

  /* Sidebar */
  .chat-sidebar {
    height: 100%; /* Fill parent */
    padding: var(--space-6);
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    /* Remove sticky/top as parent is fixed height */
  }

  /* ... sidebar styles ... */

  /* Main Chat Area */
  .chat-main {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    height: 100%;
    overflow: hidden;
  }

  .chat-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    border: 1px solid var(--border-default);
    background: var(--surface-1);
    box-shadow: var(--shadow-xl);
    border-radius: var(--radius-lg);
  }

  .sidebar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--border-default);
    padding-bottom: var(--space-4);
  }

  /* Messages Area */
  .messages {
    flex: 1;
    overflow-y: auto;
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    scroll-behavior: smooth;
  }

  .sidebar-header h2 {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--text-heading);
    margin: 0;
  }

  .random-btn {
    background: linear-gradient(
      135deg,
      var(--copper) 0%,
      var(--copper-dark) 100%
    );
    color: white;
    border: none;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    cursor: pointer;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: all var(--transition-normal);
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .random-btn:hover {
    transform: translateY(-1px);
    box-shadow:
      0 10px 15px -3px rgba(184, 115, 51, 0.3),
      0 4px 6px -2px rgba(184, 115, 51, 0.1);
    filter: brightness(1.1);
  }

  .random-btn:active {
    transform: translateY(0);
  }

  .categories-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .category-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    transition: background var(--transition-fast);
  }

  .category-item:hover {
    background: var(--surface-2);
  }

  .category-btn {
    background: none;
    border: none;
    color: var(--text-body);
    font-size: var(--text-sm);
    text-align: left;
    cursor: pointer;
    padding: 0;
  }

  .category-btn:hover {
    color: var(--copper);
  }

  .count {
    font-size: var(--text-xs);
    color: var(--text-muted);
    background: var(--surface-3);
    padding: 2px 6px;
    border-radius: var(--radius-full);
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-4);
  }

  .page-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--text-heading);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-4);
  }

  .page-subtitle {
    font-size: var(--text-lg);
    color: var(--text-muted);
    max-width: 60ch;
    margin: 0 auto;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .chat-layout {
      grid-template-columns: 1fr;
    }

    .chat-sidebar {
      display: none; /* Hide sidebar on smaller screens */
    }

    .chat-container {
      height: calc(100vh - 300px);
    }
  }

  /* Individual message */
  .message {
    display: flex;
    gap: var(--space-3);
    max-width: 90%;
    animation: message-in 0.3s ease-out;
  }

  @keyframes message-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .message.user {
    align-self: flex-end;
    flex-direction: row-reverse;
  }

  .message.assistant {
    align-self: flex-start;
  }

  .message-avatar {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .message.assistant .message-avatar {
    background: var(--bg-accent);
    color: var(--copper);
  }

  .message.user .message-avatar {
    background: linear-gradient(
      135deg,
      var(--copper) 0%,
      var(--copper-dark) 100%
    );
    color: white;
  }

  .message-content {
    padding: var(--space-4);
    border-radius: var(--radius-xl);
    line-height: var(--leading-relaxed);
  }

  .message.assistant .message-content {
    background: var(--bg-muted);
    border: 1px solid var(--border-muted);
    color: var(--text-main);
  }

  .message.user .message-content {
    background: linear-gradient(
      135deg,
      var(--copper) 0%,
      var(--copper-dark) 100%
    );
    color: white;
    border: none;
  }

  .message-content p {
    color: inherit;
    margin: 0;
  }

  .message-content p + p {
    margin-top: var(--space-3);
  }

  /* Suggestion list */
  .suggestion-list {
    list-style: none;
    margin: var(--space-3) 0 0 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .suggestion-btn {
    display: block;
    width: 100%;
    text-align: left;
    padding: var(--space-2) var(--space-3);
    background: var(--bg-card);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-lg);
    font-size: var(--text-sm);
    color: var(--text-accent);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .suggestion-btn:hover {
    background: var(--bg-accent);
    border-color: var(--copper);
    color: var(--copper);
  }

  /* Sources section */
  .sources {
    margin-top: var(--space-3);
    border-top: 1px solid var(--border-muted);
    padding-top: var(--space-3);
  }

  .sources summary {
    cursor: pointer;
    font-size: var(--text-sm);
    color: var(--text-muted);
    font-weight: var(--font-medium);
  }

  .sources summary:hover {
    color: var(--copper);
  }

  .sources ul {
    list-style: none;
    margin: var(--space-2) 0 0 0;
    padding: 0;
  }

  .sources li {
    display: flex;
    gap: var(--space-2);
    padding: var(--space-2) 0;
    border-bottom: 1px solid var(--border-muted);
    font-size: var(--text-sm);
  }

  .sources li:last-child {
    border-bottom: none;
  }

  .sources .score {
    flex-shrink: 0;
    background: var(--bg-accent);
    color: var(--copper);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
  }

  .sources .text {
    color: var(--text-muted);
    line-height: var(--leading-snug);
  }

  .sources .source-text {
    color: var(--text-muted);
    line-height: var(--leading-snug);
    font-size: var(--text-xs);
  }

  /* Retry indicator */
  .retry-indicator {
    color: var(--text-muted);
    font-style: italic;
  }

  /* Typing indicator in chat */
  .typing-indicator {
    display: flex;
    gap: 4px;
    padding: var(--space-2) 0;
  }

  .typing-indicator span {
    width: 6px;
    height: 6px;
    background: var(--text-muted);
    border-radius: 50%;
    animation: typing-bounce 1.4s infinite ease-in-out both;
  }

  .typing-indicator span:nth-child(1) {
    animation-delay: -0.32s;
  }
  .typing-indicator span:nth-child(2) {
    animation-delay: -0.16s;
  }

  @keyframes typing-bounce {
    0%,
    80%,
    100% {
      transform: scale(0);
    }
    40% {
      transform: scale(1);
    }
  }

  /* Loading dots in hint */
  .loading-dots span {
    animation: fade-in-out 1.4s infinite ease-in-out both;
  }
  .loading-dots span:nth-child(1) {
    animation-delay: 0s;
  }
  .loading-dots span:nth-child(2) {
    animation-delay: 0.2s;
  }
  .loading-dots span:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes fade-in-out {
    0%,
    100% {
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
  }

  /* Markdown styles */
  /* Typing indicator */
  .message.typing .message-content {
    display: flex;
    gap: 4px;
    padding: var(--space-4) var(--space-5);
  }

  .message.typing span {
    width: 8px;
    height: 8px;
    border-radius: var(--radius-full);
    background: var(--copper);
    animation: typing-bounce 1.4s infinite ease-in-out both;
  }

  .message.typing span:nth-child(1) {
    animation-delay: -0.32s;
  }
  .message.typing span:nth-child(2) {
    animation-delay: -0.16s;
  }
  .message.typing span:nth-child(3) {
    animation-delay: 0s;
  }

  @keyframes typing-bounce {
    0%,
    80%,
    100% {
      transform: scale(0.8);
      opacity: 0.5;
    }
    40% {
      transform: scale(1);
      opacity: 1;
    }
  }

  /* Chat form */
  .chat-form {
    padding: var(--space-4) var(--space-6);
    border-top: 1px solid var(--border-muted);
    background: var(--bg-muted);
    border-radius: 0 0 var(--radius-xl) var(--radius-xl);
  }

  .input-wrapper {
    display: flex;
    gap: var(--space-3);
  }

  .chat-input {
    flex: 1;
    padding: var(--space-3) var(--space-4);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-lg);
    background: var(--bg-card);
    color: var(--text-main);
    font-size: var(--text-base);
    transition:
      border-color var(--transition-fast),
      box-shadow var(--transition-fast);
  }

  .chat-input:focus {
    outline: none;
    border-color: var(--copper);
    box-shadow: 0 0 0 3px var(--bg-accent);
  }

  .chat-input::placeholder {
    color: var(--text-muted);
  }

  .submit-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-5);
    background: linear-gradient(
      135deg,
      var(--copper) 0%,
      var(--copper-dark) 100%
    );
    color: white;
    border: none;
    border-radius: var(--radius-lg);
    font-weight: var(--font-semibold);
    font-size: var(--text-sm);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .submit-btn:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-lg), var(--shadow-glow);
  }

  .submit-btn:focus-visible {
    outline: 2px solid var(--interactive-focus);
    outline-offset: 2px;
  }

  .submit-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }

  .input-hint {
    margin-top: var(--space-2);
    font-size: var(--text-xs);
    color: var(--text-muted);
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
  }

  .demo-badge {
    display: inline-flex;
    padding: var(--space-1) var(--space-2);
    background: var(--bg-accent);
    color: var(--copper);
    border-radius: var(--radius-sm);
    font-weight: var(--font-semibold);
    font-size: var(--text-xs);
  }

  /* Markdown rendering in messages */
  .message-content :global(strong) {
    font-weight: var(--font-bold);
  }

  .message-content :global(code) {
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    background: rgba(0, 0, 0, 0.1);
    font-family: var(--font-mono);
    font-size: 0.9em;
  }

  .message.user .message-content :global(code) {
    background: rgba(255, 255, 255, 0.2);
  }

  .message-content :global(pre) {
    margin: var(--space-3) 0;
    padding: var(--space-3);
    border-radius: var(--radius-md);
    background: rgba(0, 0, 0, 0.1);
    overflow-x: auto;
  }

  .message.user .message-content :global(pre) {
    background: rgba(255, 255, 255, 0.1);
  }

  .message-content :global(pre code) {
    padding: 0;
    background: transparent;
  }

  .message-content :global(ul),
  .message-content :global(ol) {
    margin: var(--space-2) 0;
    padding-left: var(--space-5);
  }

  .message-content :global(li) {
    margin-bottom: var(--space-1);
  }

  /* Responsive */
  @media (max-width: 767px) {
    .search-page {
      padding: var(--space-4) var(--space-4);
    }

    .page-title {
      font-size: var(--text-3xl);
    }

    .page-subtitle {
      font-size: var(--text-base);
    }

    .chat-container {
      min-height: 400px;
      max-height: 60vh;
    }

    .messages {
      padding: var(--space-4);
    }

    .message {
      max-width: 95%;
    }

    .chat-form {
      padding: var(--space-3) var(--space-4);
    }

    .submit-btn .btn-text {
      display: none;
    }

    .submit-btn {
      padding: var(--space-3);
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .message {
      animation: none;
    }

    .message.typing span {
      animation: none;
      opacity: 0.7;
    }

    .messages {
      scroll-behavior: auto;
    }
  }
</style>
